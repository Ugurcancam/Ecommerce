@model BlogDto
@{
    Layout = "_LayoutAdmin";
}
@section Scripts {
    <script src="~/admin_assets/js/tinymce/tinymce.min.js"></script>
    <script src="~/admin_assets/js/tinymce/tinymce-custom.js"></script>
}
<div class="main-content-inner">
    <!-- main-content-wrap -->
    <div class="main-content-wrap">
        <div class="flex items-center flex-wrap justify-between gap20 mb-27">
            <h3>Blog Ekle</h3>
            <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                <li>
                    <a href="index.html">
                        <div class="text-tiny">Ana Sayfa</div>
                    </a>
                </li>
                <li>
                    <i class="icon-chevron-right"></i>
                </li>
                <li>
                    <a href="#">
                        <div class="text-tiny">Blog</div>
                    </a>
                </li>
                <li>
                    <i class="icon-chevron-right"></i>
                </li>
                <li>
                    <div class="text-tiny">Blog Ekle</div>
                </li>
            </ul>
        </div>
        <!-- new-page-wrap -->
        <form class="form-new-page" method="post" asp-action="UpdateBlog">
            <div class="new-page-wrap">
                <div class="left">
                    <div class="wg-box">
                        <div class="widget-tabs">
                            <ul class="widget-menu-tab">
                                <li class="item-title active">
                                    <span class="inner">
                                        <h6>Detail</h6>
                                    </span>
                                </li>
                                <li class="item-title">
                                    <span class="inner">
                                        <h6>Revision history</h6>
                                    </span>
                                </li>
                            </ul>
                            <div class="widget-content-tab">
                                <div class="widget-content-inner active">
                                    <fieldset class="name mb-24">
                                        <div class="body-title mb-10">Başlık <span class="tf-color-1">*</span></div>
                                        <input class="" type="text" placeholder="Name" required="" asp-for="Title">
                                        <input class="" type="hidden" asp-for="Id">
                                    </fieldset>
                                    @* <fieldset class="text mb-24">
                                    <div class="body-title mb-10">Url <span class="tf-color-1">*</span></div>
                                    <input class="" type="text"
                                    placeholder="https://themeforest.net/user/themesflat" name="text"
                                    aria-required="true" required="">
                                    </fieldset> *@
                                    <fieldset class="category mb-24">
                                        <div class="body-title mb-10">Alt Kategori <span class="tf-color-1">*</span>
                                        </div>
                                        <div class="select">
                                            <select class="" asp-for="BlogCategoryId">
                                                <option>Alt Kategori Seçiniz</option>
                                                @foreach (var item in Model.BlogCategories)
                                                {
                                                    <option value="@item.Id">@item.Title</option>
                                                }
                                            </select>
                                        </div>
                                    </fieldset>
                                    <fieldset class="content">
                                        <div class="body-title mb-10">Blog İçeriği</div>
                                        <textarea class="textarea-tinymce" asp-for="PageDescription">
                                            <div class="body-text"></div>
                                        </textarea>
                                    </fieldset>

                                </div>


                                <div class="widget-content-inner">
                                    <div class="wg-table table-revision-history">
                                        <ul class="table-title flex gap20 mb-24">
                                            <li>
                                                <div class="body-title">Author</div>
                                            </li>
                                            <li>
                                                <div class="body-title">Column</div>
                                            </li>
                                            <li>
                                                <div class="body-title">Origin</div>
                                            </li>
                                            <li>
                                                <div class="body-title">After changes</div>
                                            </li>
                                            <li>
                                                <div class="body-title">Created at</div>
                                            </li>
                                        </ul>
                                        <ul class="flex flex-column items-center justify-center">
                                            <div class="image mb-10">
                                                <img src="images/item-background/history.png" alt="">
                                            </div>
                                            <h6 class="mb-2">No record</h6>
                                            <div class="body-text">This is the original and unedited article</div>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @* <div class="wg-box">
                    <div class="flex gap10 items-center justify-between">
                    <div class="body-title">Search engine optimize</div>
                    <div class="dropdown default style-box">
