@model OrderViewModel

@{
    Layout = "_LayoutAdmin";
}

<!-- main-content-wrap -->
<div class="main-content-inner">
    <!-- main-content-wrap -->
    <div class="main-content-wrap">
        <div class="flex items-center flex-wrap justify-between gap20 mb-27">
            <h3>Sipariş @Model.OrderNumber</h3>

        </div>
        <!-- order-detail -->
        <div class="wg-order-detail">
            <div class="left flex-grow">
                <div class="wg-box mb-20">
                    <div class="wg-table table-order-detail">
                        <ul class="table-title flex items-center justify-between gap20 mb-24">
                            <li>
                                <div class="body-title">Ürünler</div>
                            </li>
                        </ul>
                        <ul class="flex flex-column">
                            @foreach (var orderItem in Model.OrderItems)
                            {
                                <li class="product-item gap14">
                                    <div class="image no-bg">
                                        <img src="images/products/41.png" alt="">
                                    </div>
                                    <div class="flex items-center justify-between gap40 flex-grow">
                                        <div class="name">
                                            <div class="text-tiny mb-1">Ürün Adı</div>
                                            <a href="product-list.html" class="body-title-2">@orderItem.Product.Name</a>
                                        </div>
                                        <div class="name">
                                            <div class="text-tiny mb-1">Miktar</div>
                                            <div class="body-title-2">@orderItem.Quantity</div>
                                        </div>
                                        <div class="name">
                                            <div class="text-tiny mb-1">Fiyat</div>
                                            <div class="body-title-2">@orderItem.Product.Price₺</div>
                                        </div>
                                    </div>
                                </li>
                            }

                        </ul>
                    </div>
                </div>
                <div class="wg-box">
                    <div class="wg-table table-cart-totals">
                        <ul class="table-title flex mb-24">
                            <li>
                                <div class="body-title">Sipariş Özeti</div>
                            </li>
                            <li>
                                <div class="body-title">Tutar</div>
                            </li>
                        </ul>
                        <ul class="flex flex-column gap14">
                            <li class="cart-totals-item">
                                <span class="body-text">Ara Toplam:</span>
                                <span class="body-title-2">$70.13</span>
                            </li>
                            <li class="divider"></li>
                            <li class="cart-totals-item">
                                <span class="body-text">Kargo:</span>
                                <span class="body-title-2">$10.00</span>
                            </li>
                            <li class="divider"></li>
                            <li class="cart-totals-item">
                                <span class="body-title">Toplam:</span>
                                <span class="body-title tf-color-1">@Model.TotalAmount₺</span>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
            <div class="right">
                <div class="wg-box mb-20 gap10">
                    <div class="body-title">Özet</div>
                    <div class="summary-item">
                        <div class="body-text">Adı Soyadı</div>
                        <div class="body-title-2">@Model.User.Name @Model.User.Surname</div>
                    </div>
                    <div class="summary-item">
                        <div class="body-text">Telefon</div>
                        <div class="body-title-2">@Model.User.PhoneNumber</div> 
                    </div>
                    <div class="summary-item">
                        <div class="body-text">Sipariş Tarihi</div>
                        <div class="body-title-2">@Model.OrderDate</div>
                    </div>
                    <div class="summary-item">
                        <div class="body-text">Toplam</div>
                        <div class="body-title-2 tf-color-1">@Model.TotalAmount₺</div>
                    </div>
                </div>
                <div class="wg-box mb-20 gap10">
                    <div class="body-title">Şehir Bilgileri</div>
                    <div class="summary-item">
                        <div class="body-text">İl</div>
                        <div class="body-title-2">@Model.City</div>
                    </div>
                    <div class="summary-item">
                        <div class="body-text">İlçe</div>
                        <div class="body-title-2">@Model.District</div> 
                    </div>
                </div>
                <div class="wg-box mb-20 gap10">
                    <div class="body-title">Kargo Adresi</div>
                    <div class="body-text">@Model.DeliveryAddress</div>
                </div>
                <div class="wg-box mb-20 gap10">
                    <div class="body-title">Fatura Adresi</div>
                    <div class="body-text">@Model.BillingAddress</div>
                </div>

                <div class="wg-box gap10">
                    <div class="body-title">Tahmini Varış Tarihi</div>
                    <div class="body-title-2 tf-color-2">20 Nov 2023</div>
                    <a class="tf-button style-1 w-full" href="oder-tracking.html"><i class="icon-truck"></i>Kargo Durumu</a>
                </div>
            </div>
        </div>
        <!-- /order-detail -->
    </div>
    <!-- /main-content-wrap -->
</div>
<!-- /main-content-wrap -->