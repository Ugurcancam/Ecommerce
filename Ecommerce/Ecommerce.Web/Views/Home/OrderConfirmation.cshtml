@model Order

@{
    Layout = "_Layout";
}

<div class="container">
    <h2>Order Confirmation</h2>
    <p>Thank you for your order! Your order ID is: @Model.Id</p>
    <p>Total Amount: @Model.TotalAmount</p>
    <h3>Order Items</h3>
    <ul>
        @foreach (var item in Model.OrderItems)
        {
            <li>@item.Product.Name - @item.Quantity x @item.UnitPrice</li>
        }
    </ul>
</div>